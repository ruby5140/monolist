<% if current_user.have?(item) %>
  <%= form_tag(ownership_path(item.id), method: :delete) do %>
    <%= hidden_field_tag :item_id, item.id, id: "have_item_id_#{item.code}" %>
    <%= hidden_field_tag :type, 'Have', id: "have_#{item.code}" %>
    <%= submit_tag 'Have', class: 'btn btn-success' %>
  <% end %>
<% else %>
  <%= form_tag(ownerships_path) do %>
    <%= hidden_field_tag :item_code, item.code, id: "have_item_id_#{item.code}" %>
    <%= hidden_field_tag :type, 'Have', id: "have_#{item.code}" %>
    <%= submit_tag 'Have it', class: 'btn btn-primary' %>
  <% end %>
<% end %>